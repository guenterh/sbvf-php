#!/bin/bash

DOCKERHOST=$(ip route show | grep -e ^default | awk -F" " '{ print $3 }')

##
## setup defaults
##
SETUP_DIR="/docker/setup"

## work in progress to source out mysql. not yet functional
DB_TYPE=${DB_TYPE:-mysql}
DB_HOST=${DB_HOST:-localhost}
DB_PORT=${DB_PORT:-3306}
DB_POOL=${DB_POOL:-10}
DB_ROOT=${DB_ROOT:-root}
DB_PASS=${DB_PASS:-}

APP_HOME="/app"
APP_DB=${APP_DB:-local}

LOG_DIR="/var/log"

_adaptUid() {
    # adapt dev uid
    APP_UID=`ls -lnd ${APP_HOME} | awk -F" " '{ print $3 }'`
    APP_GID=`ls -lnd ${APP_HOME} | awk -F" " '{ print $4 }'`

    sed -e "s!^\(dev:x\):[0-9]\+:[0-9]\+:\(.*\)\$!\1:${APP_UID}:${APP_GID}:\2!" -i /etc/passwd
    sed -e "s!^\(dev:x\):[0-9]\+:\(.*\)\$!\1:${APP_GID}:\2!" -i /etc/group

    chown dev:dev /home/dev /var/www/fcgid /var/www/webgrind /var/lib/xdebug -R
}

_setupRuntime() {
    # set up what has to be set up
    for i in `ls -A ${SETUP_DIR}`; do
        echo "Setting up $i..."
        source "${SETUP_DIR}/$i"
    done
}

case "$1" in
    run)
        echo "Setting up owner/group of dev..."
        _adaptUid

        echo "Setting up runtime environment..."
        _setupRuntime

        echo "Starting supervisord..."
        /usr/bin/supervisord -c /etc/supervisor/supervisord.conf

        # start mysql server, if its on localhost
        if [ "${APP_DB}" == "local" ]; then
            echo "Starting MySQL..."
            /usr/bin/supervisorctl start mysqld
        fi;

        if [ "${SMTP_PORT_25_TCP_ADDR}" != "" ]; then
            echo "Starting Nullmailer..."
            /usr/bin/supervisorctl start nullmailer
        fi;

        /usr/bin/supervisorctl maintail -f
        ;;
    interactive)
        su -l dev
        ;;
    *)
    echo "unrecognized command: $i";
    ;;
esac

exit 0