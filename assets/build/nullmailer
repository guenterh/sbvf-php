#!/bin/bash
#
#
set -e

cat > /etc/supervisor/conf.d/nullmailer.conf <<EOF
[program:nullmailer]
priority = 20
directory = /tmp
command = /docker/run/nullmailer
user = root
autostart = false
autorestart = true
stdout_logfile = ${LOG_DIR}/supervisor/%(program_name)s.log
stderr_logfile = ${LOG_DIR}/supervisor/%(program_name)s.log
EOF

