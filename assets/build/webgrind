#!/bin/bash

set -e

WEBGRIND_ARCHIVE="webgrind-release-1.0.zip"
WEBGRIND_ROOT="/var/www"

wget -q https://webgrind.googlecode.com/files/${WEBGRIND_ARCHIVE}
unzip ${WEBGRIND_ARCHIVE} -d ${WEBGRIND_ROOT}
rm ${WEBGRIND_ARCHIVE}

cat <<EOF >/etc/apache2/sites-available/00-webgrind
Alias /webgrind /var/www/webgrind

<Directory /var/www/webgrind>
    FCGIWrapper /var/www/fcgid/php-fcgi .php
    Options +ExecCGI
</Directory>
EOF

a2ensite 00-webgrind
