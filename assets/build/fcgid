#!/bin/bash

set -e

mkdir -p /var/www/fcgid

cat >/var/www/fcgid/php-fcgi <<EOF
#!/bin/sh

umask 022

PHPRC="/var/www/fcgi/"

export PHPRC
PHP_FCGI_CHILDREN=5
export PHP_FCGI_CHILDREN
PHP_FCGI_MAX_REQUESTS=50
export PHP_FCGI_MAX_REQUESTS

exec /usr/bin/php5-cgi
EOF

chmod u+x /var/www/fcgid/php-fcgi
chmod go-w /var/www/fcgid -R
